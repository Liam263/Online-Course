<div class="mt-4">
    <h3>Edit courses</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
        </div>

        <div class="form-group">
            <label for="floatingInput">Description</label>
            <textarea class="form-control" id="description" name="description">{{course.description}} </textarea>
        </div>

        <div class="form-group">
            <label for="floatingInput">Video Id</label>
            <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" name="videoId">
        </div>

        <div class="form-group">
            <label for="floatingInput">Average</label>
            <input type="text" class="form-control" value="{{course.average}}" id="average" name="average">
        </div>

        <button type="submit" class="btn btn-primary">Save </button>
    </form>

</div>