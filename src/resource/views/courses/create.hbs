<div class="mt-4">
    <h3>Create new course</h3>
    <form method="POST" action="/courses/store">
        <div class="form-group">
            <input type="text" class="form-control" id="name" name="name">
            <label for="name">Name</label>
        </div>

        <div class="form-group">
            <input type="text" class="form-control" id="description" name="description">
            <label for="floatingInput">Description</label>
        </div>

        <div class="form-group">
            <input type="text" class="form-control" id="videoId" name="videoId">
            <label for="floatingInput">Video Id</label>
        </div>

        <div class="form-group">
            <input type="text" class="form-control" id="average" name="average">
            <label for="floatingInput">Average</label>
        </div>

        <button type="submit" class="btn btn-primary">Submit </button>
    </form>

</div>